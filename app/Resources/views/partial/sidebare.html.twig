                <img src="{{ asset("assets/dist/img/avatar/avatar.png") }}" class="img-fluid rounded-circle">
            {% endif %}
        </div>
        <div class="title">
            <h1 class="h4">{{ app.user.nom }} {{ app.user.prenom }} </h1>
            <p>
            {% if is_granted('ROLE_OPERATEUR') %}

                Opérateur

             {% elseif is_granted('ROLE_CONTROLEUR') %}

                Contrôleur
            {% else %}
             Administrateur

              {% endif %}
            </p>
        </div>
    </div>
    <ul class="list-unstyled">
        <li id="TB"><a  href="{{ path('homepage') }}"><i class="fa fa-fire"></i> <span>{{ 'dashboard'|trans({}, 'sidebar')}} </span></a></li>

