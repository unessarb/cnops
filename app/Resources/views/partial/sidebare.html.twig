                <a  href="#users" aria-expanded="false" data-toggle="collapse"> <i class="fa fa-users"></i> <span>{{ 'users'|trans({}, 'sidebar')}} </span></a>
                <ul  id="users" class="collapse list-unstyled ">
                    <li id="GUL"><a class="nav-link" href="{{ path('list_users') }}">{{ 'liste'|trans({}, 'sidebar')}} </a></li>
                    <li id="GUA"><a class="nav-link" href="{{ path('ajouter_user') }}">{{ 'add'|trans({}, 'sidebar')}} </a></li>
                </ul>
            </li>


        {% endif %}
        {% if is_granted('ROLE_OPERATEUR') %}

            <li id="MI"><a class="nav-link" href="{{ path('mes_inventaire') }}"><i class="fa fa-inbox"></i> <span>Mes inventaires</span></a></li>
            <li id="NI"><a class="nav-link" href="{{ path('ajouter_inventaire') }}"><i class="fa fa-plus"></i> <span>Nouveau inventaire</span></a></li>


        {% endif %}

        {% if is_granted('ROLE_CONTROLEUR') %}

            <li id="IN"><a class="nav-link" href="{{ path('inventaires') }}"><i class="fa fa-inbox"></i> <span>Inventaires</span></a></li>


        {% endif %}


        <li id="MD"><a class="nav-link" href="{{ path('fos_user_change_password') }}"><i class="fa fa-square-o"></i> <span>{{ 'passwordchange'|trans({}, 'sidebar')}}</span></a></li>


